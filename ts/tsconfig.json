{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"rootDir": "./src",
		"outDir": "./dist",

		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
